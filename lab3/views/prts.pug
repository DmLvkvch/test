div(id="tmp")
    table(id='parttble1')
        tr(id="tableHeader" class = "w3-green")
            thead
                td
                    h1 Name
                td
                    h1 Location
            -if(participants!==undefined)
                -for(let i = 0; i<participants.length;i++)
                    -if(participants[i].inAuc=='Yes')
                        tr(part-href='http://localhost:3000/participant/' + i)
                            td #{participants[i].name}
                            td #{participants[i].location}
    div(class = 'paint1')
        -if(x!==undefined)
            div(align='left' class = 'info')
                div(class='railway')
                    div(class="addForm")
                        table
                            tr
                                td
                                    p
                                        label Name
                                        input(class = 'edit' type='text' value=x['name'] readonly=true)
                                td
                                    p
                                        label Author
                                        input(class = 'edit' type='text' value=x["author"] readonly=true)
                            tr
                                td
                                    p
                                        label Date
                                        input(class = 'edit' type='text' value=x["date"] readonly=true)
                                td
                                    p
                                        label Description
                                        input(class = 'edit' type='text' value=x["description"] placeholder='yyyy' readonly=true)
                            tr
                                td
                                    p
                                        label In auction
                                        select(class='edit' disabled=true id='select')
                                            -if(x["inAuction"]=="Yes")
                                                option Yes
                                                option No
                                            -else
                                                option No
                                                option Yes
            div(align='center')
                img.image(src = 'http://localhost:3000/'+x["img"])